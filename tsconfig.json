// tsconfig.json
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["gatsby-types.d.ts", "*.ts", "*/**/*.tsx", "*/**/*.ts"],
  "exclude": ["node_modules", "public", ".cache"]
}
